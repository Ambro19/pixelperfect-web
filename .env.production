# ============================================================================
# API CONFIGURATION (PRODUCTION)
# ============================================================================
# Official production backend
REACT_APP_API_URL=https://api.pixelperfectapi.net
REACT_APP_API_BASE_URL=https://api.pixelperfectapi.net


# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
REACT_APP_NAME=PixelPerfect
REACT_APP_VERSION=1.0.0
REACT_APP_BUILD_DATE=2026-01-07

# Disable source maps in production (security + smaller bundle)
GENERATE_SOURCEMAP=false

# ⚠️ DO NOT SET NODE_ENV
# CRA sets it automatically to "production" during build


# ============================================================================
# STRIPE (PRODUCTION MODE)
# ============================================================================
# ⚠️ Use pk_test_ while testing, switch to pk_live_ when going live
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_51Sm03B3XNqBlGnVd4uAjMmxLZNz8erDEdrUMEz0F4ckVwzosWDCTUcRb2JtGtZtIfL0W6GF4yu4SOedCt0jXrjMS00HtqxGQbi

# Example:
# REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_XXXXXXXXXXXXXXXXXXXXXXXX


# ============================================================================
# DEBUG SETTINGS (ALWAYS OFF IN PRODUCTION)
# ============================================================================
REACT_APP_DEBUG=false
REACT_APP_VERBOSE_API_LOGS=false


# ============================================================================
# FEATURE FLAGS (PRODUCTION)
# ============================================================================
REACT_APP_ENABLE_BATCH=true
REACT_APP_ENABLE_WEB_SEARCH=false
REACT_APP_ENABLE_MEMORY=false
REACT_APP_ENABLE_WEBHOOKS=true


# ============================================================================
# USAGE LIMITS (DISPLAY ONLY — BACKEND ENFORCES REAL LIMITS)
# ============================================================================
REACT_APP_FREE_SCREENSHOTS=100
REACT_APP_PRO_SCREENSHOTS=5000
REACT_APP_BUSINESS_SCREENSHOTS=50000
REACT_APP_PREMIUM_SCREENSHOTS=500000


# ============================================================================
# BATCH LIMITS
# ============================================================================
REACT_APP_FREE_BATCH_LIMIT=0
REACT_APP_PRO_BATCH_LIMIT=50
REACT_APP_BUSINESS_BATCH_LIMIT=100
REACT_APP_PREMIUM_BATCH_LIMIT=500


# ============================================================================
# OVERAGE PRICING (DISPLAY ONLY)
# ============================================================================
