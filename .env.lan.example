# ============================================
# PIXELPERFECT FRONTEND — LAN DEVELOPMENT MODE
# ============================================
# File: frontend/.env.lan.example
#
# PURPOSE
# --------
# Used when testing the frontend from other devices
# on the same local network (phones, tablets, other PCs).
#
# HOW TO USE
# ----------
# 1. Copy this file → .env.lan
# 2. Adjust the LAN IP if needed
# 3. Run:
#    npm run start:lan
#
# ⚠️ DO NOT COMMIT .env.lan (only this example file)
# ============================================


# --------------------------------------------
# API CONFIGURATION (LAN BACKEND)
# --------------------------------------------
# Replace with the LAN IP of the machine running the backend
REACT_APP_API_URL=http://192.168.1.185:8000
REACT_APP_API_BASE_URL=http://192.168.1.185:8000


# --------------------------------------------
# DEBUG SETTINGS (LAN ONLY)
# --------------------------------------------
# Enable extra logging for debugging network/CORS issues
REACT_APP_DEBUG=true
REACT_APP_VERBOSE_API_LOGS=true


# --------------------------------------------
# AUTH / PASSWORD CONSTRAINTS
# --------------------------------------------
REACT_APP_PASSWORD_MIN_LEN=8
REACT_APP_PASSWORD_MAX_LEN=128


# --------------------------------------------
# FEATURE FLAGS (MATCH LOCAL DEV)
# --------------------------------------------
REACT_APP_ENABLE_BATCH=true
REACT_APP_ENABLE_WEB_SEARCH=false
REACT_APP_ENABLE_MEMORY=false
REACT_APP_ENABLE_WEBHOOKS=true


# --------------------------------------------
# API TIMEOUTS & RETRIES
# --------------------------------------------
# Slightly higher retry count helps with Wi-Fi hiccups
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_RETRY_ATTEMPTS=8


# --------------------------------------------
# BUILD / DEV BEHAVIOR
# --------------------------------------------
# CRA reads this automatically
GENERATE_SOURCEMAP=false

